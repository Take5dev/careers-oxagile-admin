{
  "kind": "collectionType",
  "collectionName": "countries",
  "info": {
    "singularName": "country",
    "pluralName": "countries",
    "displayName": "Country"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "capital": {
      "type": "string"
    },
    "mapx": {
      "type": "float"
    },
    "mapy": {
      "type": "float"
    },
    "flag": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "remote": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "cities": {
      "displayName": "Cities",
      "type": "component",
      "repeatable": true,
      "component": "countries.cities"
    },
    "vacancies": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::vacancy.vacancy",
      "inversedBy": "countries"
    }
  }
}
